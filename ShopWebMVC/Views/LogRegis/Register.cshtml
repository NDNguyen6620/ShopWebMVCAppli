@model ShopWebMVC.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/shared/_Layout.cshtml";
    ShopWebMVC.Data.AppDbContext db = new ShopWebMVC.Data.AppDbContext();
}
<section class="">
    <div class="container py-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="text-center mb-4 pb-2 pb-md-0 mb-md-5">Register</h3>
                        <form asp-controller="LogRegis" asp-action="Register">
                            <div class="row">

                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-2">

                                    <div class="form-outline datepicker w-100">
                                        <input type="date" asp-for="Birthday" class="form-control form-control-lg" placeholder="Enter Birthday" />
                                        <span asp-validation-for="Birthday" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-2">

                                    <h6 class="mb-2 pb-1">Gender: </h6>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Gender" id="femaleGender"
                                               value="0" checked />
                                        <label class="form-check-label" for="femaleGender">Female</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Gender" id="maleGender"
                                               value="1" />
                                        <label class="form-check-label" for="maleGender">Male</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Gender" id="otherGender"
                                               value="2" />
                                        <label class="form-check-label" for="otherGender">Other</label>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Phone" class="form-control form-control-lg" placeholder="Enter Phone" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Address" class="form-control form-control-lg" placeholder="Enter Address" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Enter Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>