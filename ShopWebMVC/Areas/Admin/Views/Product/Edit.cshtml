@model ShopWebMVC.Models.Product

@{
    ViewData["Title"] = "Edit";
    ShopWebMVC.Data.AppDbContext db = new ShopWebMVC.Data.AppDbContext();
}

<h2>Edit</h2>

<h4>Product</h4>
<hr />
<div class="container">
    <div class="bg-white p-5">
        <div class="">
            <form asp-action="Edit" enctype="multipart/form-data" class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-12 col-md-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" id="title" placeholder="Enter Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-6">
                    <label asp-for="Created_At" class="control-label"></label>
                    <input asp-for="Created_At" class="form-control" />
                    <span asp-validation-for="Created_At" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" value="@String.Format("{0:0}",Model.Price)"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group  col-12 col-md-6">
                    <label asp-for="CategoryId" class="control-label">Category</label>
                        <select class="form-control" name="CategoryId">
                            @foreach (var CategoryId in db.Categories)
                        {
                                <option value="@CategoryId.Id">@CategoryId.Name</option>

                        }
                    </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-4">
                    <label asp-for="Image" class="control-label"></label>
                    <img class="imgs" src="~/proimg/@Model.Image" height="125px">
                    <input type="file" asp-for="Image" name="files" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group w-100 py-2 border-top">
                    <input type="submit" value="Create" class="btn btn-primary px-5" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div>
    <a asp-action="Index" class = "btn btn-outline-primary">Back to List</a>
</div>
