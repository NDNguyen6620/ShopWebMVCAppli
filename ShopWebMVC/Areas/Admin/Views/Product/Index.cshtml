@model IEnumerable<ShopWebMVC.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>List Product</h2>

<p>
    <div><a class="btn btn-outline-primary" asp-action="Create">Create Product</a></div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created_At)
            </th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img class="imgs" src="~/proimg/@item.Image" height="50">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @String.Format("{0:0,0 vnđ}",@item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @String.Format("{0:dd/MM/yyyy}",@item.Created_At)
            </td>
            <td>
                 @Html.ActionLink("Edit", "Edit", new {  id = item.Id } , new { @class = "btn btn-outline-warning mx-2"})
                 @Html.ActionLink("Details", "Details", new {  id = item.Id } , new { @class = "btn btn-outline-success mx-2"})
                 @Html.ActionLink("Delete", "Delete", new {  id=item.Id } , new { @class = "btn btn-outline-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
